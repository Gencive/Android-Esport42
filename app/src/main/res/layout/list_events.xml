<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="0dp"
              android:background="@drawable/shad">


    <TextView
        android:id="@+id/game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/image"
        android:textColor="@android:color/black"
		android:layout_marginLeft="10dp"
		android:text="Starcraft II"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/game"
        android:textColor="@android:color/black"
		android:layout_marginLeft="10dp"
		android:text="Heroes Of The Lan"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@+id/image"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/start_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/image"
        android:layout_below="@+id/divider"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
		android:text="@string/start_event"
        />

	<TextView
		android:id="@+id/start_date_event"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/start_event"
		android:layout_below="@+id/divider"
		android:textSize="14sp"
		android:textColor="@android:color/black"
		android:paddingRight="10dp"
		android:paddingLeft="10dp"
		android:paddingBottom="10dp"
		android:text="DATE"
		/>

	<TextView
		android:id="@+id/end_event"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/start_event"
		android:textSize="14sp"
		android:textColor="@android:color/black"
		android:paddingRight="10dp"
		android:paddingLeft="10dp"
		android:paddingBottom="10dp"
		android:text="@string/end_event"
		/>

	<TextView
		android:id="@+id/end_date_event"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/start_date_event"
		android:textSize="14sp"
		android:textColor="@android:color/black"
		android:layout_toRightOf="@+id/end_event"
		android:paddingRight="10dp"
		android:paddingLeft="10dp"
		android:paddingBottom="10dp"
		android:text="DATE"
		/>
</RelativeLayout>